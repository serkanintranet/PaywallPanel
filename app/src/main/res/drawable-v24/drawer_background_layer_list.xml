<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- solids that simulate shadow !-->

    <item>
        <shape>
            <corners android:topRightRadius="25dp"
            android:bottomRightRadius="25dp"/>
            <solid android:color="#C9E8FF" />
            <padding android:top="0dp" android:right="0dp" android:bottom="0dp" android:left="0dp" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:topRightRadius="25dp"
                android:bottomRightRadius="25dp"/>
            <solid android:color="#C9E8FF" />
            <padding android:top="0dp" android:right="220dp" android:bottom="0dp" android:left="0dp" />
        </shape>
    </item>

    <!-- main background !-->
    <item>
        <shape>
            <corners android:topRightRadius="25dp"
                android:bottomRightRadius="25dp"/>
            <solid android:color="@color/primaryDarkColor" />
            <padding android:top="0dp" android:right="0.5dp" android:bottom="1dp" android:left="0.5dp" />
        </shape>
    </item>

</layer-list>