<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PaywallPanel" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryLightColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="CustomDialogTheme" parent="android:Theme.Material.Dialog.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_backgorund</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EditTextStyle" parent="android:Widget.EditText">
        <!--<item name="android:fontFamily">@font/muli_regular</item>-->
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:textCursorDrawable">@drawable/edittext_cursor</item>
        <item name="android:textSize">15sp</item>
        <!--<item name="android:textColorHint">@color/edittextHintColor</item>-->
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/edittextTextColor</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="ButtonStyleOne" parent="android:Widget.Material.Light.Button">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/buttonstyle_one_background</item>
    </style>

    <style name="ButtonStyleTwo" parent="android:Widget.Material.Light.Button">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/buttonstyle_two_background</item>
    </style>

    <style name="ButtonStyleThree" parent="android:Widget.Material.Light.Button">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/buttonstyle_three_background</item>
    </style>

    <style name="TextViewButtonStyle" parent="android:Widget.Material.Light.TextView">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/headerTextColor</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="TextViewHeaderStyle" parent="android:Widget.Material.Light.TextView">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/headerTextColor</item>
    </style>

    <style name="TextViewBodyStyle" parent="android:Widget.Material.Light.TextView">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/headerTextColor</item>
    </style>

    <style name="TextViewHeaderStyle2" parent="android:Widget.Material.Light.TextView">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/headerTextColor</item>
    </style>

    <style name="TextViewHintStyle" parent="android:Widget.Material.Light.TextView">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/edittextHintColor2</item>
    </style>

    <style name="Theme.PaywallPanel.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PaywallPanel.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PaywallPanel.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.NavigationDrawer" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:scrollbarThumbVertical">@color/transparent</item>
        <item name="colorControlHighlight">@color/primaryColor</item>
        <item name="colorPrimary">@color/primaryColor</item>
    </style>

</resources>